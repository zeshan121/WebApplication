@using MyWebApp.Core.Entities
@using X.PagedList
@using X.PagedList.Mvc
@model IEnumerable<GamingMachine>

@{
    ViewBag.Title = "Gaming Machines";
}

<!-- import the included stylesheet for some (very basic) default styling -->
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<div class="row">
    <div class="col-md-12">
        <h2 class="text-primary">Gaming Machines</h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <p>
            @Html.ActionLink("Create New", "Create")

        </p>
    </div>
</div>
@using (Html.BeginForm("Index", "GamingMachine", FormMethod.Get))
{
    <div class="row">
        <div class="col-md-4">
            <p>
                Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                <input type="submit" class="btn btn-primary" value="Search" />
            </p>
        </div>
    </div>
}

<div class="row Margin-SubSection-Top">
    <table class="table table-striped table-condensed table-bordered">
        <thead>
            <tr>
                <th>Serial Number</th>
                <th>Gaming Machine Position</th>
                <th style="width:40%">Name</th>
                <th>Created Date</th>
                <th class="text-center">Actions</th>


            </tr>
        </thead>
        <tbody id="tblResultBody">
            @if (Model.Count() == 0)
            {
                <tr class="text-info">
                    <td colspan="5">No data.</td>
                </tr>
            }
            else
            {
                foreach (var gamingMachine in Model)
                {
                    <tr>
                        <td>@gamingMachine.GamingSerialNumber</td>
                        <td>@gamingMachine.GamingMachinePosition</td>
                        <td>@Html.ActionLink(@gamingMachine.GameName, "Edit", new {id= gamingMachine.GamingSerialNumber })</td>
                        <td>@gamingMachine.CreateDate</td>
                        <td class="text-center">
                            @Html.ActionLink("Delete", "Delete", new { id = gamingMachine.GamingSerialNumber, currentFilter = ViewBag.CurrentFilter }, new { @class = "btn btn-default btn-xs" })
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>
<!-- output a paging control that lets the user navigation to the previous page, next page, etc -->
@Html.PagedListPager((IPagedList)ViewBag.OnePageOfGamingMachine, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

@section Scripts {
    <script>
        $(document).ready(function () {
            $("a[href*='Delete']").click(function () {
                return confirm('Are you sure want to delete?');
            });
        });
    </script>
}